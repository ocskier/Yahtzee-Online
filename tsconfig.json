{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "es2015"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "noEmit": true,
        "baseUrl": "./server"
    },
    "include": [
        "./server/**/*.ts"
    ],
    "exclude": [
        "./node_modules/**/*"
    ]
}
