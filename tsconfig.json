{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext",
            "es2015",
            "es6"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "noEmit": true,
        "baseUrl": "./server",
        "outDir": "./server/dist",
        // "paths": {
        //     "*": [
        //         "node_modules/*",
        //         "types/*"
        //     ]
        // },
    },
    "include": [
        "server/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
